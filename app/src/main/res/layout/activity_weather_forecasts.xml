<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nguyenhuong.baitapday13.WeatherForecastsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_edit_location_black_24dp"
            android:padding="8dp"
            />
        <EditText
            android:id="@+id/edt_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="Nhập vào vị trí"
            android:textColorHint="#fff"/>
        <ImageView
            android:id="@+id/img_search"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_search_black_24dp"
            android:padding="8dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_date"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Date"
            android:textSize="14sp"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_city"
                android:textStyle="italic|bold"
                android:text="Hà Nội"
                android:textSize="25sp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
            <TextView
                android:id="@+id/tv_country"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Việt Nam"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingTop="10dp"
                android:gravity="right|bottom">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="o"
                    android:textSize="20sp"/>
                <TextView
                    android:textStyle="bold"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="C"
                    android:textSize="30sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_dgree"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="30"
                android:textSize="90sp"
                android:paddingRight="25dp"
                android:gravity="right|bottom"
                />
            <TextView
                android:id="@+id/tv_weaather"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Mưa"
                android:gravity="center"
                android:textSize="25sp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/img_weather"
            android:scaleType="centerCrop"
            android:padding="8dp"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:padding="10dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#00000000">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:paddingTop="8dp"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chi tiết"
                android:textSize="17sp"
                android:textStyle="bold"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#212221"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_water"
                    android:padding="20dp"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/tv_humidity"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#212221"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_cloud"
                    android:padding="20dp"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/tv_cloud"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#212221"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_wind"
                    android:padding="20dp"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/tv_wind"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
